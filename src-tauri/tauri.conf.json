{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "glifos",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "startDragging": true,
        "setAlwaysOnTop": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Glifos",
        "width": 450,
        "height": 400,
        "minWidth": 250,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "visible": false,
        "focus": false,
        "transparent": true,
        "closable": false,
        "minimizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.stanlino.glifos",
      "shortDescription": "Glifos",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Utility",
      "longDescription": "Glifos is a simple app to help you manage your notes and tasks.",
      "publisher": "Stanlino"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/stanlino/glifos/main/updates.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUxODk4NEY3RDQ5RTlERkQKUldUOW5aN1U5NFNKVVVPZmlGdFZKeFhZRDV3UHdGNjVWUkhLemhyLzZJSHk0U1BxNUZHUEkyNUoK"
    }
  }
}
